{
  "name": "win-overlay-artji",
  "version": "1.0.1",
  "description": "ตั้งค่า WIN Overlay พร้อม Hotkey",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dist": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "release": "electron-builder -w --publish always"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "jose": "^6.1.0",
    "node-fetch": "^3.3.2",
    "node-machine-id": "^1.1.12",
    "open": "^10.1.2",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "electron": "^36.9.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.winoverlay",
    "productName": "artji-win-product",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "publish": [
    { "provider": "github", "owner": "ARTjirapaht", "repo": "win-overlay-artji" }
  ]
  
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
